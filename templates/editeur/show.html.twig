{% extends 'base.html.twig' %}

{% block title %}Détail de l’Éditeur{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
<link rel="stylesheet" href="{{ asset('css/categorie.css') }}">
<link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}

{% block body %}
<div class="card">

    <!-- Bande bordeaux -->
    <div class="card-hero">
        <i class="fa-solid fa-building"></i>
        <div>
            <div class="hero-title">{{ editeur.nom }}</div>
            <div class="hero-subtitle">ID : #{{ editeur.id }} — Pays : {{ editeur.pays ?: '—' }}</div>
        </div>
    </div>

    <!-- Contenu -->
    <div class="card-body">
        <div class="form-grid">

            <div class="field col-6">
                <label>Nom</label>
                <input type="text" value="{{ editeur.nom }}" readonly>
            </div>

            <div class="field col-6">
                <label>Pays</label>
                <input type="text" value="{{ editeur.pays ?: '—' }}" readonly>
            </div>

            <div class="field col-12">
                <label>Adresse</label>
                <input type="text" value="{{ editeur.adresse ?: '—' }}" readonly>
            </div>

            <div class="field col-6">
                <label>Téléphone</label>
                <input type="text" value="{{ editeur.telephone ?: '—' }}" readonly>
            </div>

        </div>
{% if is_granted('ROLE_ADMIN') %}
        <div class="actions">
            <a class="btn btn-primary" href="{{ path('app_editeur_edit', {'id': editeur.id}) }}">
                <i class="fa-regular fa-pen-to-square"></i> Modifier
            </a>

            <span class="inline-form">
                {{ include('editeur/_delete_form.html.twig', {
                    button_class: 'btn btn-danger',
                    button_icon: 'fa-solid fa-trash',
                    button_label: 'Supprimer'
                }) }}
            </span>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
