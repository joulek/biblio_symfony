{# templates/editeur/_form.html.twig #}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
<link rel="stylesheet" href="{{ asset('css/livre.css') }}">
<link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}


{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

  <div class="form-grid">
    <div class="field col-6">
      {{ form_label(form.nom, 'Nom de l’éditeur') }}
      <div class="control">
        {{ form_widget(form.nom, {'attr': {'placeholder':'Ex. Gallimard'}}) }}
        {{ form_errors(form.nom) ? '<div class="error">'~form_errors(form.nom)~'</div>' }}
      </div>
    </div>

    <div class="field col-6">
      {{ form_label(form.pays, 'Pays') }}
      <div class="control">
        {{ form_widget(form.pays, {'attr': {'placeholder':'Ex. France'}}) }}
        {{ form_errors(form.pays) ? '<div class="error">'~form_errors(form.pays)~'</div>' }}
      </div>
    </div>

    <div class="field col-12">
      {{ form_label(form.adresse, 'Adresse') }}
      <div class="control">
        {{ form_widget(form.adresse, {'attr': {'placeholder':'Rue, ville…'}}) }}
        {{ form_errors(form.adresse) ? '<div class="error">'~form_errors(form.adresse)~'</div>' }}
      </div>
    </div>

    <div class="field col-6">
      {{ form_label(form.telephone, 'Téléphone') }}
      <div class="control">
        {{ form_widget(form.telephone, {'attr': {'placeholder':'Ex. +33 1 23 45 67 89'}}) }}
        {{ form_errors(form.telephone) ? '<div class="error">'~form_errors(form.telephone)~'</div>' }}
      </div>
    </div>
  </div>

  <div class="form-actions">
    <button class="btn btn-primary">
      <i class="fa-solid fa-check"></i> {{ button_label|default('Enregistrer') }}
    </button>

  </div>

{{ form_end(form) }}
