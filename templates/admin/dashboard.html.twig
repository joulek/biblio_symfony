{% extends 'base.html.twig' %}

{% block title %}Tableau de bord d'administration{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Tableau de bord d'administration</h1>
        
        <div class="row">
            <!-- Statistiques rapides -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Livres</h5>
                        <p class="display-4">{{ stats.livres|default(0) }}</p>
                        <a href="{{ path('app_livre_index') }}" class="btn btn-outline-primary">Gérer les livres</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Utilisateurs</h5>
                        <p class="display-4">{{ stats.utilisateurs|default(0) }}</p>
                        <a href="#" class="btn btn-outline-primary">Gérer les utilisateurs</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Emprunts</h5>
                        <p class="display-4">{{ stats.emprunts|default(0) }}</p>
                        <a href="#" class="btn btn-outline-primary">Voir les emprunts</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Notes & Avis</h5>
                        <div class="d-flex align-items-center mb-2">
                            {% for i in 1..5 %}
                                {% if i <= (stats.noteMoyenne|default(0)) %}
                                    <i class="fas fa-star text-warning"></i>
                                {% else %}
                                    <i class="far fa-star text-warning"></i>
                                {% endif %}
                            {% endfor %}
                            <span class="ms-2">{{ stats.noteMoyenne|default(0)|number_format(1) }}/5</span>
                        </div>
                        <p class="mb-0">{{ stats.totalNotes|default(0) }} avis enregistrés</p>
                        <a href="{{ path('app_admin_notes_index') }}" class="btn btn-outline-primary mt-2">Gérer les notes</a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Dernières activités -->
        <div class="card">
            <div class="card-header">
                Dernières activités
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Utilisateur</th>
                                <th>Action</th>
                                <th>Détails</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for activite in activites|default([]) %}
                                <tr>
                                    <td>{{ activite.date|date('d/m/Y H:i') }}</td>
                                    <td>{{ activite.utilisateur }}</td>
                                    <td>{{ activite.action }}</td>
                                    <td>{{ activite.details }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Aucune activité récente</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            transition: transform 0.2s;
            height: 100%;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .display-4 {
            font-size: 2.5rem;
            font-weight: 300;
            line-height: 1.2;
        }
    </style>
{% endblock %}
