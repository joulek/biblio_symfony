{% extends 'base.html.twig' %}

{% block title %}Détail du Livre{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/livre.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}

<div class="card">

    <div class="card-hero">
        <i class="fa-solid fa-book-open-cover"></i>
        <div>
            <div class="hero-title">{{ livre.titre }}</div>
            <div class="hero-subtitle">ISBN : {{ livre.isbn ?: '—' }}</div>
        </div>
    </div>

    <div class="card-body">
        <div class="form-grid">
            <!-- Titre -->
            <div class="field col-6">
                <label>Titre</label>
                <input type="text" value="{{ livre.titre }}" readonly>
            </div>

            <!-- Quantité -->
            <div class="field col-6">
                <label>Quantité</label>
                <input type="text" value="{{ livre.qte }}" readonly>
            </div>

            <!-- Prix -->
            <div class="field col-6">
                <label>Prix unitaire</label>
                <input type="text" value="{{ livre.prixunitaire }}" readonly>
            </div>

            <!-- Date -->
            <div class="field col-6">
                <label>Date de publication</label>
                <input type="text" value="{{ livre.datepub ? livre.datepub|date('Y-m-d') : '—' }}" readonly>
            </div>

            <!-- ISBN -->
            <div class="field col-12">
                <label>ISBN</label>
                <input type="text" value="{{ livre.isbn ?: '—' }}" readonly>
            </div>

            <!-- Catégorie -->
            <div class="field col-6">
                <label>Catégorie</label>
                <input type="text" value="{{ livre.categorie ? livre.categorie.designation : '—' }}" readonly>
            </div>

            <!-- Éditeur -->
            <div class="field col-6">
                <label>Éditeur</label>
                <input type="text" value="{{ livre.editeur ? livre.editeur.nom : '—' }}" readonly>
            </div>

            <!-- Auteurs -->
            <div class="field col-12">
                <label>Auteur(s)</label>
                <input type="text" value="{% if livre.auteurs|length > 0 %}
                    {{ livre.auteurs|map(a => a.nom ~ ' ' ~ a.prenom)|join(', ') }}
                {% else %}
                    —
                {% endif %}" readonly>
            </div>
        </div>
{% if is_granted('ROLE_ADMIN') %}
        <div class="actions">
            <a class="btn btn-primary" href="{{ path('app_livre_edit', {'id': livre.id}) }}">
                <i class="fa-regular fa-pen-to-square"></i> Modifier
            </a>
            <span class="inline-form">
                {{ include('livre/_delete_form.html.twig', {
                    button_class: 'btn btn-danger',
                    button_icon: 'fa-solid fa-trash',
                    button_label: 'Supprimer'
                }) }}
            </span>
        </div>
    </div>
</div>
{% endif %}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     