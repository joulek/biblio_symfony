{% extends 'base.html.twig' %}

{% block title %}
  Nos Livres
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/livre-cards.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/navbar.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/livre.css') }}" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
{% endblock %}

{% block body %}
  <!-- Header -->
  <div class="page-header page-header-centered">
    <h1 class="page-title">Nos Livres</h1>

    {% if is_granted('ROLE_ADMIN') %}
      <div class="actions">
        <a class="btn btn-primary" href="{{ path('app_livre_new') }}"><i class="fa-solid fa-plus"></i> Nouvel livre</a>
      </div>
    {% endif %}
  </div>

  <!-- Cartes livres -->
  <div class="livre-grid">
    {% for livre in livres %}
      <div class="livre-card">

        {% if livre.image %}
          <img src="{{ asset('uploads/livres/' ~ livre.image) }}" alt="{{ livre.titre }}" />
        {% else %}
          <div class="no-img">Pas d'image</div>
        {% endif %}

        <h3 class="livre-title">{{ livre.titre }}</h3>

        <p class="livre-info">
          <i class="fa-solid fa-calendar"></i> {{ livre.datepub ? livre.datepub|date('Y') : '—' }}
        </p>
        <p class="livre-info">
          <i class="fa-solid fa-tag"></i> {{ livre.prixunitaire }} DT
        </p>
        <p class="livre-info">
          <i class="fa-solid fa-book-open-reader"></i> {{ livre.categorie ? livre.categorie.designation : '—' }}
        </p>

        <!-- ACTIONS EN LIGNE -->
        <div class="card-actions">

          <!-- Bouton Voir détails -->
          <a href="{{ path('app_livre_show', { id: livre.id }) }}" class="btn-action">
            Voir détails
          </a>

          <!-- Bouton Ajouter au panier -->
          <form action="{{ path('panier_add', { id: livre.id }) }}" method="post">
            <button class="btn-action btn-cart" type="submit">
              <i class="fa-solid fa-cart-plus"></i> Ajouter
            </button>
          </form>

        </div>

        {% if is_granted('ROLE_ADMIN') %}
          <div class="actions-admin">
            <a href="{{ path('app_livre_edit', { id: livre.id }) }}"><i class="fa-solid fa-pen-to-square"></i></a>

            <form method="post" action="{{ path('app_livre_delete', { id: livre.id }) }}" onsubmit="return confirm('Confirmer la suppression ?');">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}" />
              <button type="submit"><i class="fa-solid fa-trash"></i></button>
            </form>
          </div>
        {% endif %}

      </div>
    {% else %}
      <p>Aucun livre disponible.</p>
    {% endfor %}
  </div>
{% endblock %}
